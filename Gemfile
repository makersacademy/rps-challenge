source 'https://rubygems.org'

gem 'sinatra'

group :test do
  gem 'capybara'
  gem 'rspec'
  gem 'rubocop', '0.79.0'
  gem 'simplecov', require: false
  gem 'simplecov-console', require: false
  gem 'sinatra'
  gem 'sinatra-contrib' #for reloading
  gem 'selenium-webdriver' #goes alongside capybara for automated browser
  gem 'pry' # open up pry, 'require 'capybara/dsl'' and 'require 'selenium-webdriver' and 'include Capybara::DSL'. To set up a default driver - 'Capybara.default_driver = :selenium'

end

