<head>
<style>
div.container {
  display: flex;
  align-items: center;
  justify-content: center
}
</style>
</head>

<div align="center">
  <br>
<h3> <%= @game.outcome_string %> </h3>
</div>

<div class = "container">
<div style="float:left;width:30%;" align="center">
  <p><%= @game.name %> chose <%= @game.choice %></p>
  <%= @game.image(@game.choice) %>
</div>

<div class="container"><h3>vs</h3></div>

<div style="float:right;width:30%;" align="center">
  <p>Computer chose <%= @game.opponent_choice %></p>
  <%= @game.image(@game.opponent_choice) %>
</div>
</div>
<br>
<div align="center">
  <form action="/play" method="get">
    <input type="submit" value="Next round">
  </form>
</div>
