
<body>

  <% if @player_choice == "Rock" %>
  <h1><%= @game.players[0].name %> has played Rock</h1>
  <h1>WALL.E has played <%= @game.result %></h1>
  <h2><%= @game.players[0].name %> has lost!<h1>
    <% elsif @player_choice == "Paper"%>
    <h1><%= @game.players[0].name %> has played Paper</h1>
    <h1>WALL.E has played <%= @game.result %></h1>
    <h2><%= @game.players[0].name %> has lost!<h1>
      <% elsif @player_choice == "Scissors"%>
      <h1><%= @game.players[0].name %> has played Scissors</h1>
      <h1>WALL.E has played <%= @game.result %></h1>
      <h2><%= @game.players[0].name %> has lost!<h1>
        <% end %>

        <% @game.add_compu_points %>

        <h1><%= @game.players[0].name %> has got <%= @game.players[0].points %> points</h1>
        <h1>WALL.E has got <%= @game.compu_points %> points</h1>

        <form method="link" action="/check">
          <input type="submit" value="Play again">
        </form>
      </body>

      <style>

      body {
        background-image: url("http://cdn.pcwallart.com/images/walle-wallpaper-3.jpg");
      }

      h1 {
        font-family: Comic Sans MS;
        font-size: 35px; color:red;
        text-align:center
      }

      h2 {
        font-family: Comic Sans MS;
        font-size: 50px; color:red;
        text-align:center
      }
      form {
        width:13%; margin:7% auto
      }

      input[type=submit] {
        display: inline-block;
        border-radius: 20px;
        background-color: orange;
        border: none;
        color: #FFFFFF ;
        text-align: center;
        font-size: 18px;
        padding: 20px;
        width: 130px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
      }

      input[type=submit]:hover {
        border: 1px solid #999;
        color: red;
      }
      </style>
