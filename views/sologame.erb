<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
    <title>RPS!</title>
    <link rel="stylesheet" href="style.css" type="text/css">
  </head>
  <body>
    <div>
      <h1 class="title__sub">Make your choice <%= @game.retrieve_playername(0) %></h1>
      <form action="/selection" method="post">
        <button class="btn--choice" type="submit" value="rock" name="choice">
          <img class="img__svg" src="images/stone.svg" alt="rock" />
        </button>
        <button class="btn--choice" type="submit" value="paper" name="choice">
          <img class="img__svg" src="images/paper.svg" alt="paper" />
        </button>
        <button class="btn--choice" type="submit" value="scissors" name="choice">
          <img class="img__svg" src="images/scissors.svg" alt="scissors" />
        </button>
      </form>
    </div>
