<h1>Welcome to the RPS Dashboard</h1>
<h3>Current match: <u> <%= @game.user_1.name %> </u> vs. <u> <%= @game.user_2.name %> </u> </h3>

<% if @game.over? %>
  <h3><%= @game.winner.name %> wins with <%= @game.winner.move %>, beating <%= @game.loser.name %>'s <%= @game.loser.move %></h3>

  <div id='container' padding-top: 50px;>
      <% if @game.winner.move == 'Rock' %>
        <img src='https://i.gyazo.com/5c827302b680ba794cb7c90e64c9e875.png'>
      <% end %>
      <% if @game.winner.move == 'Scissors' %>
        <img src='https://i.gyazo.com/44ca63abded9f86ad50d89e4f8280d63.png'>
      <% end %>
      <% if @game.winner.move == 'Paper' %>
        <img src='https://i.gyazo.com/54bb40ee5477f7693b716c1bd98ed076.png'>
      <% end %>
      <% if @game.winner.move == 'Spock' %>
        <img src='https://i.gyazo.com/788ad9c1bdaebdf6f7c43a2186363f86.png'>
      <% end %>
      <% if @game.winner.move == 'Lizard' %>
        <img src='https://i.gyazo.com/b309a9ba10ac0f842f290e96dcf78043.png'>
      <% end %>
  </div>
  <div id='container' padding-top: 50px;>
  <h4>Moves</h4>
  <ul style="width:10%; float:left;">
    <% @game.winner.moves.each do |winner_list| %>
      <li><%= winner_list %></li>
    <%end %>
  </ul>
  <ul style="width:10%; float:left;">
    <% @game.loser.moves.each do |loser_list| %>
      <li><%= loser_list %></li>
    <% end %>
  </ul>
  </div>
  <br>
  <form action="/">
    <input type='submit' value='Restart'>
  </form>
<% else %>
    <% if @game.tie? %>
    <p>The game is a tie, both users played <%= @game.current_user.move %></p>
    <img src='https://i.gyazo.com/5e54f9bbf837ab8ca98c578ebbb07a0f.png'>
    <% end %>
  <br>
  <h3><b><%= @game.current_user.name %></b>'s turn.</h3>
  <br> Please select an option below. <br>
  <p>
    <form action="/rock">
      <input type='submit' value='Rock'>
    </form>

    <form action="/scissors">
      <input type='submit' value='Scissors'>
    </form>

    <form action="/paper">
        <input type='submit' value='Paper'>
    </form>

  <form action="/spock">
    <input type='submit' value='Spock'>
  </form>

  <form action="/lizard">
    <input type='submit' value='Lizard'>
  </form>
  <p>
<% end %>
