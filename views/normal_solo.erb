<div style="max-width: 500px; height: 500px; border: 5px solid black; margin: 25px; padding: 25px">
  <div><%= session[:game].player_1.name %> vs. Computer</div>
  <div><%= session[:game].player_1.name %>, choose your move!</div>

  <form action ='/solo_move' method = 'post'>
    <div>
      <input type='radio' id='rock' name='move' value='rock' checked='checked'>
      <label for='rock'>Rock</label><br>
      <input type='radio' id='paper' name='move' value='paper'>
      <label for='paper'>Paper</label><br>
      <input type='radio' id='scissors' name='move' value='scissors'>
      <label for='scissors'>Scissors</label><br>
    </div>

    <div>
      <input type='submit' value='Play'>
    <div>
  </form>
</div>
