<div class="container">
  <div class="row" id="name_entry_wrapper">
    <div class="col-xs-12 col-md-6 offset-md-3">
      <form action="/names" method="post">
        <div class="form-group row">
          <label for="p1_name" class="col-2 col-form-label">Player 1</label>
          <div class="col-10">
            <input class="form-control" type="text" value="" name="p1_name">
          </div>
        </div>
        <div class="form-group row text-center">
          <div class="col-10 offset-2 text-center">
            <div class="form-check form-check-inline">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="player_1_type" value="human" checked> Human
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label for="p2_name" class="col-2 col-form-label">Player 2</label>
          <div class="col-10">
            <input class="form-control" type="text" value="" name="p2_name">
          </div>
        </div>
        <div class="form-group row text-center">
          <div class="col-10 offset-2 text-center">
            <div class="form-check form-check-inline">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="player_2_type" value="human" checked> Human
              </label>
            </div>
            <div class="form-check form-check-inline">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="player_2_type" value="computer"> Computer
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-10 offset-2 text-center">
            <button type="submit" id="start_game" name="start_game" class="btn btn-lg btn-primary">Start Game!</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
