<form class="form-signin" action="/play" method="post">
  <h2 class="form-signin-heading">What would you like to do now?</h2>
  <input class="btn btn-lg btn-primary btn-block" type="submit" value="Play again">
</form>
<form action="/" method="get">
  <input class="btn btn-lg btn-primary btn-block" type="submit" value="Start over">
</form>
