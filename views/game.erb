<!-- views/games.erb -->

<p><%= @game.player_1.name %>, please choose your choice.</p>

<div class="choice">

<form action="/result" method="get">
  <input type="radio" id="rock" name="throw" value="rock">
  <label for="rock">ROCK!</label><br>
  <input type="radio" id="paper" name="throw" value="paper">
  <label for="paper">PAPER!</label><br>
  <input type="radio" id="scissors" name="throw" value="scissors">
  <label for="scissors">SCISSORS!</label><br>
<input type="submit" value="Throw!">
</form>
</div>