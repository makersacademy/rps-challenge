<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='mystyle.css'>
  </head>
  <body>

    <h1 class='header_layout' class='header__style'>
      Choose your weapon <%= @game.player_1.name %>!
    </h1>

    <form action='/second_player' class='form_layout'>
      <input type='submit' class='button__style' value='Rock!'>
      <% @game.player_1_choose(0) %>
    </form>

    <form action='/second_player' class='form_layout'>
      <input type='submit' class='button__style' value='Paper!'>
      <% @game.player_1_choose(1) %>
    </form>

    <form action='/second_player' class='form_layout'>
      <input type='submit' class='button__style' value='Scissors!'>
      <% @game.player_1_choose(2) %>
    </form>

  </body>
</html>
