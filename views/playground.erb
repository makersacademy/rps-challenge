<body>
<style>
  body {
    background-image:url('http://js.itivy.com/jiaoben1104/images/escheresque_ste.png');
    }

  #container {
    margin-top: 1.5em;
    position: inherit;
    width: 20em;
    height: 25.5em;
    border: 5px solid gray;
    padding: 1em;
    padding-top: 0em;
    font-size: 1.5em;
    border-radius: 25px;
    box-shadow: 5px 5px black;
    background-color: white;
  }


  .selector {
    width: 20em;
    padding-top: -1em;
    margin-bottom: 3em;
  }

  h1 {
    padding: 1em;
  }

  #btn {
    margin: 0;
    background-color: red;
    color: #FFFFFF;
    padding: 10px;
    border-radius: 10px;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    width: 100%;
    height: 2em;
    font-size: smaller;
  }
</style>


<center>
<div id=container>


<form action='/results' method='post' >

  <div id=player1>
    <h1><%=@game.player1.name%></h1>
    <select class="selector" name=player1_select>
      <option value="Rock">Rock</option>
      <option value="Paper">Paper</option>
      <option value=Scissors>Scissors</option>
    </select>
  </div>

  <h2><input id=btn type=submit value='FIGHT!'></h2>

  <div id=player2>
    <h1><%=@game.player2.name%></h1>
    <select class="selector" name=player2_select>
      <option value="Rock">Rock</option>
      <option value="Paper">Paper</option>
      <option value=Scissors>Scissors</option>
    </select>
  </div>
  
</form>

</div>
</center>
</body>
