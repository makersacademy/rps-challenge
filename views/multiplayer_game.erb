<%="#{session[:player_1_name]} used #{session[:player_1_weapon]}"%>
<br>
<%="#{session[:player_2_name]} used #{session[:player_2_weapon]}"%>
<br>
<% if @winner == session[:player_1_weapon]%>
  <%= "Congratulations #{session[:player_1_name]}! You win!" %>
  <%= "#{session[:player_2_name]} you are the loser" %>
<% elsif @winner == session[:player_2_weapon]%>
  <%= "Congratulations #{session[:player_2_name]}! You win!" %>
  <%= "#{session[:player_1_name]} you are the loser" %>
<% else %>
  <%= "Draw huh, oh well. Back to work!" %>
<% end %>
