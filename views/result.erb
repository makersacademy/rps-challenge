<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Choose Wisely</title>
  </head>
  <style>
  #title { font-family: 'Nunito', sans-serif;
           font-size: 50px;                   }

  .top {margin-top: 10px;}

  .middle {margin-top: 30px;}

  .vs {font-family: 'Nunito', sans-serif;
           font-size: 50px;
         margin-top: 120px;}

  </style>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
  <body>
    <div class="container">
      <div class="row top">
        <div class="col-12">
          <% if @fight.draw? %>
          <h1 class="text-center" id="title">It's a Draw</h1>
          <% else %>
          <h1 class="text-center" id="title"><%=@winner%> Wins</h1>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <h1><%= @fight.player1.name %>: <%= @fight.player1.score %></h1>
        </div>
        <div class="col-3 offset-6">
          <h1 class="text-right"><%= @fight.player2.name %>: <%= @fight.player2.score %></h1>
        </div>


      </div>
      <div class="row middle">
        <div class="col-4">
          <img src=<%="/#{@fight.player1.decision}.png"%> class="img-fluid rock" alt="rock">
        </div>
        <div class="col-4">
           <h1 class="vs text-center">vs.</h1>
        </div>
        <div class="col-4">
          <img src=<%="/#{@fight.player2.decision}.png"%> class="img-fluid scissors" alt="scissors">
        </div>

      </div>
      <div class="row">
        <div class="col-1 offset-3">
          <%if @fight.computer? %>
            <form action="/play" method="get">
          <%else %>
            <form action="/play2" method="get">
          <% end %>
          <button type="submit" class="btn btn-primary" id="sub">Play Again</button>
          </form>
        </div>
        <div class="col-1 offset-3">
          <form action="/" method="get">
          <button type="submit" class="btn btn-primary" id="sub">&nbsp;&nbsp;&nbsp;Setup&nbsp;&nbsp;&nbsp;</button>
          </form>
        </div>
      </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
