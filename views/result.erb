<head>
  <link rel="stylesheet" type="text/css" href="style.css">
  <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="animate.css">
</head>

<body id="result">

  <div id="title">
    <%=@game.player1.name%> Vs. <%=@game.player2.name%>
  </div>

  <div id="you_played">
    <%=@game.player1.name%> Played:
    <br>
    <%=@game.player1.choice%>
  </div>

  <div id="player_choice" class= "Tossing">
    <%if @game.player1.choice == "rock"%>
        <input type="image" src="http://i.imgur.com/XT41ZXk.jpg" alt="Rock";>
    <%elsif @game.player1.choice == "scissors"%>
        <input type="image" src="http://i.imgur.com/ttUlD5y.jpg" alt="Scissors";>
    <%else @game.player1.choice == "paper"%>
        <input type="image" src="http://i.imgur.com/r1GckhD.jpg" alt="Paper";>
    <%end%>
  </div>

  <div id="vs">
    Vs.
  </div>

  <div id="pc_played">
    <%=@game.player2.name%> Played:
    <br>
    <%=@game.player2.choice%>
  </div>

  <div id="pc_choice" class= "Tossing2">
    <%if @game.player2.choice == "rock"%>
        <input type="image" src="http://i.imgur.com/XT41ZXk.jpg" alt="Rock";>
    <%elsif @game.player2.choice == "scissors"%>
        <input type="image" src="http://i.imgur.com/ttUlD5y.jpg" alt="Scissors";>
    <%else @game.player2.choice == "paper"%>
        <input type="image" src="http://i.imgur.com/r1GckhD.jpg" alt="Paper";>
    <%end%>
  </div>

  <div id="popup1" class="overlay">
      <div class="popup">
          <a class="close" href="#popup1">&times;</a>
          <div class="content">
            <%if @game.winner%>
              <%=@game..name%> won!
            <%else%>
              It's a draw!
            <%end%>
      </div>
  </div>

  <form action="/player1_choose" >
    <input type="submit" value="Play Again?" id="again_button";>
  </form>

  <form action="/" >
    <input type="submit" value="Start New Game?" id="restart_button";>
  </div>

  <div id="player_score">
    <%=@game.player1.name%>'s score: <%=@game.player1.score%>
  </div>

  <div id="computer_score">
    <%=@game.player2.name%>'s score: <%=@game.player2.score%>
  </div>

</body>
