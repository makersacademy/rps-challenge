<center>
    <br>
    <%="#{@player_name}: #{@player_weapon}"%>
    <br>
    <%="Computer: #{@computer_weapon}"%>
    <br>
    <p style="font-size:30px">
      <%="Result: #{@player_name} #{@result}"%>
    </p>
    <br>
    <br>
    Tally:
    <br>
    <%="Wins: #{@wins}"%>
    <br>
    <%="Losses: #{@losses}"%>
    <br>
    <br>
    <form action="/choose_weapon" method="post">
      <input type="submit" value="Start another game">
    </form>
<% if @result == :Lost! %>
  <img src='https://media.tenor.com/images/9baef56e6faabc7a6cae3b0d474c6770/tenor.gif' width="400" height="250" >
<% elsif @result == :Won! %>
  <img src='https://media1.tenor.com/images/b5b525642d31fc32571618da55f973e5/tenor.gif?itemid=4786736' width="300", height="300" >
<% else %>
  <img src='https://media.giphy.com/media/mNiYGQlFenfmE/giphy.gif' width="350", height="300" >
<% end %>


</center>
