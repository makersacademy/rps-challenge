<body>
  <div id='resultcontent'>

    <div id="container">
      <h1>
        <img src='<%= @game.result_image %>' height="30" width="30" />
         You <%= @game.latest_result.to_s %>!
        <img src='<%= @game.result_image %>' height="30" width="30" />
      </h1>

      <div id='p1'>
        <%=@game.player_1.name %>
      </div>
      <div id='p2'>
