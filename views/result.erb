<link href="https://fonts.googleapis.com/css?family=Bungee|Bungee+Hairline|Bungee+Shade&display=swap" rel="stylesheet">

<style>
body {
  font-family: "Bungee";
  font-size: 2vw;
}
img { width: 20%; }
</style>

<div style="font-family: 'Bungee'; font-size: 1.5vw">
  <% if @game.winner.nil? %>
    <h1 align="center"> It's a draw! </h1>
  <% else %>
    <h1 align="center"> <%= @game.winner_name %> wins! </h1>
  <% end %>
</div>

<% if @game.winner == @game.player_1 %>
  <div align="center">
    <img style='border: 3px solid lime' src=<%=@p1_pic%> >
    <img img style='border: 3px solid red' src=<%=@p2_pic%> >
  </div>
<% elsif @game.winner == @game.player_2 %>
  <div align="center">
    <img style='border: 3px solid red' src=<%=@p1_pic%> >
    <img img style='border: 3px solid lime' src=<%=@p2_pic%> >
  </div>
<% else %>
  <div align="center">
    <img style='border: 3px solid gold' src=<%=@p1_pic%> >
    <img img style='border: 3px solid gold' src=<%=@p2_pic%> >
  </div>
<% end %>

<div align="center" style="font-family: 'Bungee HairLine'; font-size: 2.2vw">
  <b> <%= @game.p1_name %>: <%= @game.p1_score%> / <%= @game.p2_score%> :<%= @game.p2_name %> </b>
</div>

<div style="font-family: 'Bungee'; font-size: 1vw">
  <br>
  <% if @game.winner.nil? %>
    <h1 align="center"> Play again </h1>
  <% else %>
    <h1 align="center"> <%= @game.reason %>  </h1>
  <% end %>
</div>

<div align="center">
  <form action="/next" method="post">
    <input type="submit" value="Next">
  </form>
</div>
