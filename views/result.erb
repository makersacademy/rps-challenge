<% session[:weapons] = Weapon.new(session[:player_weapon]) %>
<% session[:weapons2] = Weapon.new(session[:computer].weapon) %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Rock-paper-scissors</title>
    <link href="stylesheets/main.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Mukta+Mahee" rel="stylesheet">
</head>
<body>
  <p class="victory center">Result:<% if session[:weapons].winner(session[:weapons2]) == :draw %>
    You had a draw
    <% elsif session[:weapons].winner(session[:weapons2]) == false %>
    You lost
    <% else %>
    You won
    <% end %>
  </p>
  <p class="center"><%= session[:player_name] %>: chose <%= session[:player_weapon] %></p>
  <p class="center">Computer chose: <%= session[:computer].weapon %></p>

  <div class="container">
    <% if session[:player_weapon] == 'rock' %>
    <img class="left" src="https://i.imgur.com/QK44nQ8.png">
    <% elsif session[:player_weapon] == 'paper' %>
    <img class="left" src=https://i.imgur.com/rHSbJg7.png>
    <% else %>
    <img class="left" src="https://i.imgur.com/xMBDxZE.png">
    <% end %>
    <% if session[:computer].weapon == :rock %>
    <img class="right" src="https://i.imgur.com/QK44nQ8.png">
    <% elsif session[:computer].weapon == :paper %>
    <img class="right" src=https://i.imgur.com/rHSbJg7.png>
    <% else %>
    <img class="right" src="https://i.imgur.com/xMBDxZE.png">
    <% end %>
      <!-- <p class="center">Computer chose: <%= session[:computer].weapon %></p>
      <p>Noel won</p>
      <p>Player name: <%= session[:player_name] %></p>
      <p>Player weapon: <%= session[:player_weapon] %></p>
      <p>Computer weapon: <%= session[:computer].weapon %></p> -->
  </div>
  <p><a href="/">Click here to play again</a></p>
</body>
