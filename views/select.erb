<head>
<link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet"
  type='text/css'>
  <link rel="stylesheet" href="style.css" media="screen" title="no title" charset="utf-8">
</head>

<body class="select-page">
  <h1><%= @game.player_1_name.player_1_name %> vs. Zhijian Wang (AI)</h1>
  <h4>Best of three rounds.</h4>
  <% if @game.score[0] == 3 %>
  <h3><%= @game.player_1_name.player_1_name %>: <%= @game.score[0] %></h3>
  <h3>Zhijian Wang (AI): <%= @game.score[1] %></h3>
  <span><%= @game.player_1_name.player_1_name %> wins!</span>
  <form action="/" method="get">
  <input type="submit" value="New Game">
  </form>
  <% elsif @game.score[1] == 3 %>
  <h3><%= @game.player_1_name.player_1_name %>: <%= @game.score[0] %></h3>
  <h3>Zhijian Wang (AI): <%= @game.score[1] %></h3>
  <span>Zhijian Wang (AI) wins!</span>
  <form action="/" method="get">
  <input type="submit" value="New Game">
  </form>
  <% elsif @game.score.reduce(0, :+).between?(0,6) %>
  <form action="/play" method="get">
    <label form="select">Please select you gesture:</label></br>
    Rock<input type="radio" name="gesture" value="rock"></br>
    Paper<input type="radio" name="gesture" value="paper"></br>
    Scissors<input type="radio" name="gesture" value="scissors"></br>
    Spock<input type="radio" name="gesture" value="spock"></br>
    Lizard<input type="radio" name="gesture" value="lizard"></br>
    <input type="submit" value="Play">
  </form>
  <h3><%= @game.player_1_name.player_1_name %>: <%= @game.score[0] %></h3>
  <h3>Zhijian Wang (AI): <%= @game.score[1] %></h3>
  <% end %>


</body>
