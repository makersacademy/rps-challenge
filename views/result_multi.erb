<style>
div {
  position: absolute;
  background-color: #B9DEED;
  font-family: Helvetica;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
form {
  text-align: center;
  margin: auto auto 35% auto;
}
p{
  text-align: center;
  font-size: 75px;
}
ul {
  list-style: none;
}
h1 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  text-align: center;
  font-weight: bold;
  font-size: 50px
}
li {
  margin: 10px auto auto auto;
}
</style>

<div>
  <ul>
<% if @result == "Player2" %>
    <li>
      <p><%= @game.player1_name %>: <%= @game.player1_move %>  <%= @game.player2_name %>: <%= @game.player2_move %></p>
    <li>
      <h1><%= @game.player2_name %> won!</h1>
    </li>

<% end %>

<% if @result == "Player1" %>

    <li>
      <p><%= @game.player1_name %>: <%= @game.player1_move %>  <%= @game.player2_name %>: <%= @game.player2_move %></p>
    <li>
      <h1><%= @game.player1_name %> won!</h1>
    </li>

<% end %>

<% if @result == "Draw" %>

    <li>
      <p><%= @game.player1_name %>: <%= @game.player1_move %>  <%= @game.player2_name %>: <%= @game.player2_move %></p>
    <li>
      <h1>Draw</h1>
    </li>

<% end %>

    <li>
      <form action="/game">
        <input type="submit" value="Play again?" name=playagain>
      </form>
    </li>
  </ul>

</div>
