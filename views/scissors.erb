<% @game.shoot %>

<h1> Computer chose: <%= @game.weapon2.type.capitalize %> </h1>

<% if @game.result == 'win' %>

    <h1> You win! </h1>

<% elsif @game.result == 'lose' %>

    <h1> You lose! </h1>

<% elsif @game.result == 'tie' %>

    <h1> You tied! </h1>

<% end %>

<form action="/play" method="post">
  <input type="submit" value="Play Again?">
</form>