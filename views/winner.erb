<% if @game.winner == "Draw" %>
<h1> It's a <%= @game.winner %> !</h1>
<% else %>
<h1> <%= @game.winner %> wins!</h1>
<% end %>
<table>
  <tr>
    <th> <%= @game.retrieve_playername(0) %> </th>
      <th> : </th>
    <th> <%= @game.retrieve_playername(1) %> </th>
  </tr>
  <tr>
    <td> <%= @game.retrieve_playerchoice(0) %> </td>
    <td> : </td>
    <td> <%= @game.retrieve_playerchoice(1) %> </td>
  </tr>
</table>
<% if @game.retrieve_playername(1) != "Computer" %>
<form action="/multiplayer" method="get">
  <input type="submit" value="PvP Again!" name="pvp_again"/>
</form>
<% else %>
<form action="/sologame" method="get">
  <input type="submit" value="Try Again!" name="try_again"/>
</form>
<% end %>
<form action="/" method="get">
  <input type="submit" value="Different game type!" name="different_game"/>
</form>
