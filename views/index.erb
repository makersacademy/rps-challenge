<link rel="stylesheet" href="index.css" type="text/css" />

<center>
  <h1>Welcome to... RPS!</h1>
  <h2>Please enter player name and choice below</h2>
  <form method='POST' action='/player_1_turn'>
    <div>
      <label>Player One</label>
      <input type="text" name="player_1_name" value="Player 1 name"/>
    </div>
    <br>

    <div class=radio>
      <h3> choose throw </h3>
      <input type="radio" name="choice" id="Rock"    value="Rock" checked/>Rock<br>
      <input type="radio" name="choice" id="Paper"   value="Paper" />Paper<br>
      <input type="radio" name="choice" id="Scissors"value="Scissors" />Scissors<br>
      <input type="radio" name="choice" id="Lizard"   value="Lizard" />Lizard<br>
      <input type="radio" name="choice" id="Spock"value="Spock" />Spock<br>
    </div>
    <br>

    <div class=radio>
      <h3> choose opponent </h3>
      <input type="radio" name="game_mode" id="human" value="human" />human<br>
      <input type="radio" name="game_mode" id="cpu"   value="cpu" checked/>cpu<br>
    </div>
    <br>

    <div>
      <input type="submit" value="FIGHT" />
    </div>

  </form>
</center>
