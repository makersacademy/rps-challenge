
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<div class="container">
  <h1>Battle</h1>
  <h3>Sign in to play</h3>
  <p><strong>Enter a minimum of 2 and maximum of 5 names</strong></p>
    <form action="/names" method="post">
      <div class="form-group">
        <label for="player_1_name"> Player 1 name</label>
          <input type="text" name="player_1_name" class="form-control">
      </div>
      <div class="form-group">
        <label for="player_2_name"> Player 2 name </label>
          <input type="text" name="player_2_name" class="form-control">
      </div>
      <div class="form-group">
        <label for="player_3_name"> Player 3 name </label>
          <input type="text" name="player_3_name" class="form-control">
      </div>
      <div class="form-group">
        <label for="player_4_name"> Player 4 name </label>
          <input type="text" name="player_4_name" class="form-control">
      </div>
      <div class="form-group">
        <label for="player_5_name"> Player 5 name </label>
          <input type="text" name="player_5_name" class="form-control">
      </div>
      <input class="btn btn-success float-right" type="submit" value="Submit">
    </form>
</div>
