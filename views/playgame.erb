<!doctype html>
  <head>
    <meta charset="utf-8">
    <title>Rock Paper Scissors!!</title>
    <link href="<%= url("/styles.css") %>" rel="stylesheet" type="text/css"/>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">    
  </head>

  <body>
    <div class = "wrapper">
      <div class = "game-score">
        <h1>Rock Paper Scissors</h1>
        <h2><%=@game.player1.name%> vs. <%=@game.computer.name%>!</h2>
        <h2><%=@game.player1.name%>'s Score: <%=@game.player1.score%></h2>
        <h2><%=@game.computer.name%>'s Score: <%=@game.computer.score%></h2>
      </div>
      <div class="selection-entry">
        <form method="post" action="/selection"> 
          <input class='submit' name="playerchoice" type='submit' value='Rock'>
          <input class='submit' name="playerchoice" type='submit' value='Paper'>
          <input class='submit' name="playerchoice" type='submit' value='Scissors'>
          <input class='submit' name="playerchoice" type='submit' value="I'm Feeling Lucky">
          <h2>You clicked <%=@move%>!</h2>
          <h2>Game Result: <%=@game.playgame(@move, @game.computer_move)%></h2>
        </form>
      </div>
    </div>
  </body>
</html>