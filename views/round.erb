<head>
  <link href="https://fonts.googleapis.com/css?family=Oswald&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Oswald', sans-serif;
      text-align: center;
      padding-top: 200px;
      border: 1px solid black;
    }
    .medium_hr {
      padding-right: 150px;
      padding-left: 150px;
    }
    .box-option {
      text-decoration: none;
      background-color: #00BFFF;
      font-size: 40px;
      color: #737373;
      border: dotted #737373;
      width: 250px;
      height: 250px;
      padding: 10px;
      margin: 100px;
      text-align: center;
      align-items: center;
      -webkit-transition: all 0.3s;
      -moz-transition: all 0.3s;
      -o-transition: all 0.3s;
      transition: all 0.3s;
    }

    .box-option:hover {
      background-color: #ffa64d;
      cursor: pointer;
      color: #000;
      border: dotted #000;
    }
  </style>
</head>
<body>
  <% if @user_name %>
    <h2><%= @user_name %> please choose one of the options below</h2>
  <% else %>
    <h2>Rock, Paper or Scissors?</h2>
  <% end %>
  <form method="post" action="/result">
    <input type="submit" class="box-option" name="options" value="Rock">
    <input type="submit" class="box-option" name="options" value="Paper">
    <input type="submit" class="box-option" name="options" value="Scissors">
  </form>
</body>
