<html>
  <h1>Number of Players: <%= @number %></h1>
  <h2>Hello <%= @player1.name %></h2>
  <% if @player2.computer? %>
    <h2>You are playing against the Computer</h2>
  <% else %>
    <h2>Hello <%= @player2.name %></h2>
  <% end %>
  <form action='/rules' method='get'>
    <input type='submit' value='Check Rules'>
  </form>
  <form action='/game-screen' method='get'>
    <input type='submit' value='Continue to Game'>
  </form>
</html>