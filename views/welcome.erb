<body style="margin:0;padding:0; font-family:Helvetica">
  <wrapper>
    <div id="side-menu" style="float:left;display:inline-block;color:white; font-size:18px; padding:10px 0 10px 20px;border-right: 3px solid pink;background-color:#333; height:100%; width:200px">
      <p style="margin-bottom:40px; color:#fff">SCORE:</p>
      <p><span style="color:pink"><%= @game.player1.name %>:</span> <%= @game.player1.score %> pts </p>
      <p><span style="color:pink"><%= @game.player2.name %>:</span> <%= @game.player2.score %> pts </p>
    </div>

    <div id="content" style="padding-left:30px;display:inline-block;width;float:left">
      <h1>Welcome <span style="color:#991251"><%= @game.player1.name %></span> and <span style="color:#991251"><%= @game.player2.name %></span>... </h1>

      <h1 style="font-size:150px">Ready?</h1>
      <a style="text-decoration:none;color:white" href="/first_player">
        <button style="width:400px; background-color:#ddd;border-radius:5%;margin-top:20px; padding:3px 20px;font-size:40px;">Play</button>
      </a>
    </div>
  </wrapper>
</body>
