<%= @game.name %>
<form action= '/play' method='post'>
  <input type="submit" name='choice' value='rock'>
  <input type="submit" name='choice' value='paper'>
  <input type="submit" name='choice' value='scissors'>
</form>

<%= @game.name %> chose <%= @game.choice %>
<div id='computer'>
  Computer chose <%= @game.computer_choice %>
</div>

<% if @game.win? %>
<%= @game.name %> wins :D
<% elsif @game.draw?%>
<%= @game.name %> and computer draw
<% elsif @game.lose? %>
   Computer wins :(
<% end %>
