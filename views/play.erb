<%= @game.player1.name %> vs. <%= @game.player2.name %>
Score <%= @game.player1.points %>-<%= @game.player2.points %>

<form action="/result">
  <%= @game.player1.name %> choice:<br>
  <input id="rock1" type="radio" name="mode1" value="rock">Rock<br>
  <input id="paper1" type="radio" name="mode1" value="paper">Paper<br>
  <input id="scissors1" type="radio" name="mode1" value="scissors">Scissors<br>
  <input id="spock1" type="radio" name="mode1" value="spock">Spock<br>
  <input id="lizard1" type="radio" name="mode1" value="lizard">Lizard<br>
  <br><br>
  <% if @game.player2.name != 'Computer' %>
    <%= @game.player2.name %> choice:<br>
    <input id="rock2" type="radio" name="mode2" value="rock">Rock<br>
    <input id="paper2" type="radio" name="mode2" value="paper">Paper<br>
    <input id="scissors2" type="radio" name="mode2" value="scissors">Scissors<br>
    <input id="spock2" type="radio" name="mode2" value="spock">Spock<br>
    <input id="lizard2" type="radio" name="mode2" value="lizard">Lizard<br>
    <br><br>
  <%end%>
	<input type="submit" value="Reveal winner">
</form>
