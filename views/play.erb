<div class="flex_row" id="versus">
  <h1><%= @game.user.name.capitalize%> v Computer</h1>
</div>

<form action="results" method="post" class="flex_col" id="options">
<div class="flex_row">
  <input type="radio" value="rock" id="rock-id" name="hand">
  <label id="rock-label" for="rock-id">rock</label>

  <input type="radio" value="paper" id="paper-id" name="hand">
  <label id="paper-label" for="paper-id">paper</label>

  <input type="radio" value="scissors" id="scissors-id" name="hand">
  <label id="scissors-label" for="scissors-id">scissors</label>
</div>
  <input type="submit" value="shoot">
</form>

