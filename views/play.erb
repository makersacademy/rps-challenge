<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Nothing+You+Could+Do&display=swap" rel="stylesheet">

  <head>
    <script src="https://kit.fontawesome.com/48e6684c73.js" crossorigin="anonymous"></script>
  </head>

<style>
body {
  background-color: #F7B15C;
  color: #1e2020;
  text-align: center;
  font-family: 'Bangers', cursive;
  border: 20px solid black;
  border-radius: 7px;
  height: 100vh;
}

h1 {
  margin-top: 50px;
}
p {
  margin-top: 150px;
  font-size: 30px;
}

form {
  margin-top: 50px;
}

.btn {
  background-color: #F7B15C;
  border: none;
  color: #1e2020;
  font-family: 'Bangers', cursive;
  font-size: 30px;
  padding: 10px 20px;
  box-sizing: border-box;
}
</style>

<h1><%= @game.player.name %> vs. <%= @game.computer.name %> </h1>

<p>3, 2, 1 go</p>

<form action='/user_makes_choice' method='post'>
  <button class="btn" value='rock' name='choice'><i class="fas fa-hand-rock"></i> Rock</button>
  <button class="btn" value='paper' name='choice'><i class="fas fa-hand-paper"></i> Paper</button>
  <button class="btn" value='scissors' name='choice'><i class="fas fa-hand-scissors"></i> Scissors</button>
</form>
