
 
    <h1 class="intro"> This is the Rock Paper Scissors Game <h1>
    <h2 class="intro"> You will play against the computer <h2>
    <h2> Please <%= @player_1_name %> make your choice </h2>
    <form method="post" action="/choice">
    <input type='submit' value="ROCK" name="player_1_choice">
    <input type='submit' value="PAPER" name="player_1_choice">
    <input type='submit' value="SCISSORS" name="player_1_choice">
    </form>
    <h2> You chosed <%= @player_1_choice %> Computer chosed <%= @computer_choice %> </h2>

    <% case @result
      when :computer %>
    <h1> Computer wons </h1>
    <% when :player %>
    <h1> You won  </h1>
    <% when :tie %>
    <h1> It's a tie </h1>
    <% end %>

 