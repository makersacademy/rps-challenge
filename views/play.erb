<h3>Welcome Player 1: <%= @game.player_1.get_name %>!</h3>

Player 1: Choose your weapon!

<form action="/choose_weapon" method="post">
<section class="first">
<input type="radio" name="chosen_weapon_1" value="Rock", id="Rock">Rock</input>
<input type="radio" name="chosen_weapon_1" value="Paper" id="Paper">Paper</input>
<input type="radio" name="chosen_weapon_1" value="Scissors" id="Scissors">Scissors</input>
</section>
<% if @game.player_2.get_name != "Computer" %>
<br>
<h3>Welcome Player 2: <%= @game.player_2.get_name %>!</h3>

Player 2: Choose your weapon!
<br>
<section class="second">
<input type="radio" name="chosen_weapon_2" value="Rock", id="Rock">Rock</input>
<input type="radio" name="chosen_weapon_2" value="Paper" id="Paper">Paper</input>
<input type="radio" name="chosen_weapon_2" value="Scissors" id="Scissors">Scissors</input>
</section>
<% end %>
<input type="submit" value="Submit">
</form>
