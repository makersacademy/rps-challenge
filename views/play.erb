<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <style>
    body
    {
      background-image: url("https://goo.gl/46sKdN");
      background-position: -180px 0px;
    }
    button[type=submit]
    {
      padding: 9px;
      font-size: 18px;
      line-height: 18px;
    }
    input[type=text]
    {
      width: 218px;
    }
    input[type=submit]
    {
      background: #fff;
      color: #000;
    }

    input[type=submit], input[type=text]
    {
      padding: 9px;
      font-size: 18px;
      line-height: 18px;
    }
    form
    {
      color: #000;
      font-family: Sans-serif;
      font-size: 150%;
    }
    </style>
  </head>
  <body>
    <h1 style="text-align:center;">Rock-Paper-Scissor GAME</h1>

    <div style="height: auto; overflow: hidden">
      <h1 style="float:right;"> <%= @name_2 %></h1>
      <h1 style="float:left;"> <%= @name_1 %></h1>
    </div>

  <div>
   <div style="height: auto; overflow: hidden">
     <div style="float:left;">
     <form  action='/rock_1' method='post'>
        Choose Rock:
        <button type='submit' value='Rock1'>Rock</button>
      </form>

      <form  action='/paper_1' method='post'>
        Choose Paper:
        <button type='submit' value='Paper1'>Paper</button>
      </form>

      <form   action='/scissor_1' method='post'>
        Choose Scissor:
        <button type='submit' value='Scissor1'>Scissor</button>
      </form>
    </div>

     <div style="float:right;">

      <form  action='/rock_2' method='post'>
        Choose Rock:
        <button type='submit' value='Rock2'>Rock</button>
       </form>

       <form  action='/paper_2' method='post'>
        Choose Paper:
        <button type='submit' value='Paper2'>Paper</button>
       </form>

       <form  action='/scissor_2' method='post'>
        Choose Scissor:
        <button type='submit' value='Scissor2'>Scissor</button>
       </form>
      </div>

     <% if @game.player_1.sign && @game.player_2.sign%>
     <form align='center' action="/refresh" method="get">
       <input type='submit' value='Start next Match'>
     </form>
     <% end %>

    </div>

  <h1 style="text-align:center;">VS</h1>

  <div align='center'>

    <% if @game.player_1.sign == :rock && @game.player_2.sign == :rock %>
      <h2>TIE!</h2>
    <% elsif @game.player_1.sign == :rock && @game.player_2.sign == :paper%>
      <h2> <%= @game.player_2.name %> WON! </h2>
      <% @game.increase_player2_points %>
    <% elsif @game.player_1.sign == :rock && @game.player_2.sign == :scissor%>
      <h2><%=@game.player_1.name %> WON!</h2>
      <% @game.increase_player1_points %>
    <% elsif @game.player_1.sign == :paper && @game.player_2.sign == :rock%>
      <h2><%=@game.player_1.name %> WON!</h2>
      <% @game.increase_player1_points %>
    <% elsif @game.player_1.sign == :paper && @game.player_2.sign == :paper%>
      <h2>TIE!</h2>
    <% elsif @game.player_1.sign == :paper && @game.player_2.sign == :scissor%>
      <h2> <%= @game.player_2.name %> WON! </h2>
      <% @game.increase_player2_points %>
    <% elsif @game.player_1.sign == :scissor && @game.player_2.sign == :rock%>
      <h2> <%= @game.player_2.name %> WON! </h2>
      <% @game.increase_player2_points %>
    <% elsif @game.player_1.sign == :scissor && @game.player_2.sign == :paper%>
      <h2><%=@game.player_1.name %> WON!</h2>
      <% @game.increase_player1_points %>
    <% elsif @game.player_1.sign == :scissor && @game.player_2.sign == :scissor%>
      <h2>TIE!</h2>
    <% end %>
    </div>

    <div style="height: auto; overflow: hidden">

      <h3 style="float:left;"><%= @game.player_1.name %> chose <%= @game.player_1.sign %>
      <br> PT: <%= @game.pt_player1 %> </h3>

      <h3 style="float:right;"><%= @game.player_2.name %> <%= @game.player_2.sign %>
      <br>PT: <%= @game.pt_player2 %></h3>

    </div>

  </body>
</html>
