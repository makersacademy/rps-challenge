<% unless @winner %>
<h2><%=@player1%> please make a choice!</h2>
<form method="post" action="/game-on">
    <button type="submit" name="choice" value="0">Rock</button>
</form>
<form method="post" action="/game-on">
    <button type="submit" name="choice" value="1">Scissors</button>
</form>
<form method="post" action="/game-on">
    <button type="submit" name="choice" value="2">Paper</button>
</form>
<%else%>
<p><%= @player1%> selected <%= @pl1_choice %></p>
<p><%= @player2%> selected <%= @pl2_choice %></p>

<%if @winner==0%>
<p> Draw </p>
<%else%>
<p> <%= @winner %> won!!!</p>
<%end%>

<h2><%=@name%> Play again!</h2>
<form method="post" action="/game-on">
    <button type="submit" name="choice" value="0">Rock</button>
</form>
<form method="post" action="/game-on">
    <button type="submit" name="choice" value="1">Scissors</button>
</form>
<form method="post" action="/game-on">
    <button type="submit" name="choice" value="2">Paper</button>
</form>
<%end%>
