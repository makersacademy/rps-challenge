<div align="center">
  <style>
  body {background-color: lightgrey;}
  h1   {color: crimson;}
  p {color: crimson;}
  </style>

  <h1>
    <%= @player_name %> vs. Computer
  </h1>

  <p>
    Please pick your move!
  </p>

  <form action="/single_result" method="get">
    <label for="rock">Rock</label>
    <input type="radio" name="move" id="rock" value="rock"><br>
    <label for="paper">Paper</label>
    <input type="radio" name="move" id="paper" value="paper"><br>
    <label for="scissors">Scissors</label>
    <input type="radio" name="move" id="scissors" value="scissors"><br>
    <input type="submit" value="Submit">
  </form>

</div>
