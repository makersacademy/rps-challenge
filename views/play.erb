<head>
<link rel="stylesheet" href="css/styles.css">
<link href="https://fonts.googleapis.com/css?family=Bangers|Poiret+One" rel="stylesheet">
</head>

<div class="container">
  <% if @game.players[1].instance_of? Computer %>
  <h1 id="Subtitle"> Welcome, <%= @game.players[0].name %></h1>
  Choose your weapon:
  <p>
  <a href="/oneplayer_result?weapon=rock"><button class="weapon-button"><img alt="Rock" src="/images/rock.png"></button></a>
  <a href="/oneplayer_result?weapon=paper"><button class="weapon-button"><img alt="Paper" src="/images/paper2.png"></button></a>
  <a href="/oneplayer_result?weapon=scissors"><button class="weapon-button"><img alt="Scissors" src="/images/scissors.png"></button></a>
  <% else %>
    <h1 id="Subtitle"><%= @game.players[0].name %>, you're up first!</h1>
  Choose your weapon:
  <p>
  <a href="/switch_turn?weapon=rock"><button class="weapon-button"><img alt="Rock" src="/images/rock.png"></button></a>
  <a href="/switch_turn?weapon=paper"><button class="weapon-button"><img alt="Paper" src="/images/paper2.png"></button></a>
  <a href="/switch_turn?weapon=scissors"><button class="weapon-button"><img alt="Scissors" src="/images/scissors.png"></button></a>
  <% end %>
</div>
