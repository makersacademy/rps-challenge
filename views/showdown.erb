<div class="container text-center">

  <div class="row">
    <div>
        <h1><%= @game.player_1.name %> vs. <%= @game.player_2.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
        <h3><%= @game.player_1.name %>: <%= @game.scorer.score.first %></h3>
        <p><%= @game.player_1.name %> plays <%= @game.player_1.pick %>!</p>
    </div>

    <div class="col-lg-6">
        <h3><%= @game.player_2.name %>: <%= @game.scorer.score.last %></h3>
        <p><%= @game.player_2.name %> plays <%= @game.player_2.pick %>!</p>
    </div>
  </div>

  <div class="row">
    <div>
      <% if @game.winner == nil %>
        <h2>Round ended in a draw</h2>
      <% else %>
        <h2><%= @game.winner.name %> wins the point</h2>
      <% end %>
    </div>
  </div>

<br>

  <div class="row">
    <div>
      <a href="/play" type="button" class="btn btn-lg btn-success">Play another round</a>
    </div>
  </div>

<br>

  <div class="row">
    <div>
      <a href="/" type="button" class="btn btn-lg btn-danger">Restart</a>
    </div>
  </div>

</div>
