<div class="container-fluid main-content">
  <div class="row text-center" >
    <div class="col-12" id="results-wrapper">
      <div class="row">
        <div class="col-4">
          <h2><%= @game.players[:player_1].name %></h2>
        </div>
        <div id="p1_score" class="col-2">
          <h2><%= @game.player_1_score %></h2>
        </div>
        <div id="p2_score" class="col-2">
          <h2 class="player-name"><%= @game.player_2_score %></h2>
        </div>
        <div class="col-4">
          <h2 class="player-name"><%= @game.players[:player_2].name %></h2>
        </div>
        <div class="col-6 offset-3">
          <h3 id="result_message"><%="#{@round.result_message}"%></h3>
        </div>
        <div class="col-4">
          <div class="px-5">
            <img class="results-move-icon img-fluid" src="/img/<%= @round.player_1_move.to_s %>.<%= @round.player_1_move == :spock ? 'jpg' : 'svg' %>" alt="player 1 move">
          </div>
        </div>
        <div class="col-4 align-self-center">
          <%= "<img id=\"win-indicator-arrow\" src=\"/img/right-arrow.svg\" class=\"img-fluid px-5 #{'flip-horizontal' if @round.winning_move[0] == :player_2}\" alt=\"arrow\">" unless @round.draw? %>
          <%= "<img src=\"/img/right-arrow.svg\" class=\"draw-indicator-arrow px-3\"><img src=\"/img/right-arrow.svg\" class=\"px-3 draw-indicator-arrow flip-horizontal\">" if @round.draw? %>
        </div>
        <div class="col-4">
          <div class="px-5">
            <img class="results-move-icon img-fluid " src="/img/<%= @round.player_2_move.to_s %>.<%= @round.player_2_move == :spock ? 'jpg' : 'svg' %>" alt="player 2 move">
          </div>
        </div>
        <div class="col-12">
          <form action="/reset" method="post">
            <div class="form-group row">
              <div class="col-12 text-center">
                <button type="submit" id="new_round" name="new_round" class="btn btn-lg btn-primary">Next Round</button>
              </div>
            </div>
          </form>
          <form action="/" method="get">
            <div class="form-group row">
              <div class="col-12 text-center">
                <button type="submit" id="new_players" name="new_players" class="btn btn-primary">Start New Game</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-12 text-center pb-4" id="message_log_wrapper">
      <ul>
        <%= @message_log.messages.reverse.map { |message| "<li>#{message}</li>" }.join %>
      </ul>
    </div>
  </div>
</div>
