<div id="bold">
	<form action="/start" method="post">
		Player 1<br>
		<input style="color:black; "type="text" name="player_1_name" required><br>
		<%if @player_mode == '2' %>
			Player 2<br>
			<input style="color:black;" type="text" name="player_2_name" required><br>
		<%else%>
			<input type="hidden" style="color:black;" readonly type="text" name="player_2_name" value="Computer">
		<%end%>
		<input type="hidden" name="game_mode" value=<%= @game_mode%>>
		<input type="hidden" name="player_mode" value=<%= @player_mode%>>
		<br>
		<input id="submit_button" type="submit" value="Submit">
	</form>
</div>