<div id="bold">
	<form action="/start" method="post">
		Player 1:<input style="color:black; "type="text" name="player_1_name"><br>
		<%if @player_mode == "two" %>
			Player 2:
			<input style="color:black;" type="text" name="player_2_name"><br>
		<%else%>
			<input type="hidden" style="color:black;" readonly type="text" name="player_2_name" value="Computer">
		<%end%>
		<input type="hidden" name="game_mode" value=<%= @game_mode%>><br>
		<input type="hidden" name="player_mode" value=<%= @player_mode%>><br>
		<input id="submit_button" type="submit" value="Submit">
	</form>
</div>