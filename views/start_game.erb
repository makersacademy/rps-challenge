<% if @visitor %>
  <p>Welcome, <%= @visitor %>!</p>
  Select your gesture:
  <form action = "/result" method = "post">
  <label for = "rock">Rock</label>
  <input type = "radio" name = "gesture" value = "rock" >
  <br />
  <label for = "paper">Paper</label>
  <input type = "radio" name = "gesture" value = "paper" >
  <br />
  <label for = "scissors">Scissors</label>
  <input type = "radio" name = "gesture" value = "scissors" >
  <br />
  <input type = "submit" value = "Submit">
  </form>
<% else %>
  <% redirect to("/register") %>
<% end %>