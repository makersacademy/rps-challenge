<body>
  <h1><%= @game.players[1].name %> has won the move!<h1>

    <% @game.players[1].add_points %>

    <h1><%= @game.players[0].name %> has got <%= @game.players[0].points %> points</h1>
    <h1><%= @game.players[1].name %> has got <%= @game.players[1].points %> points</h1>

    <div style="height:auto; margin: 0 auto; align:center;">
      <form method="link" action="/2check">
        <input type="submit" value="Play again">
      </form>
    </div>
