<container class="hud">
  <section class="left-hud">
    <div class="hud-content">
      <section class="instructions">
        <%= @game.multiplayer? ? @game.player(1).name : 'You' %> lost :(
        <br />
        Weapon: <%= @game.player(1).weapon.type %>
      </section>
    </div>
  </section>
  <section class="right-hud">
    <div class="hud-content">
      <section class="instructions">
        <%= @game.player(2).name %> won!
        <br />
        Weapon: <%= @game.player(2).weapon.type %>
      </section>
    </div>
  </section>
</container>
