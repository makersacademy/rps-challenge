<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/custom.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cutive+Mono|Monoton|Quicksand" rel="stylesheet">
    <title>Let Battle Commence!</title>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-103022270-1', 'auto');
      ga('send', 'pageview');

    </script>
  </head>

  <body>
    <h1><%= @game.player_1.name %> vs. <%= @game.player_2.name %> </h1>

    <% if @game.current_player == @game.player_1 %>
    <div class="container-fluid">
      <div class="jumbotron">
        <div class="container">
          <h3><%= @game.current_player.name %>, choose your move</h3>
          <form action="/switch-turns" method="post">
            <input type="submit" value="Rock" name="move" class="btn btn-default">
            <input type="submit" value="Paper" name="move" class="btn btn-default">
            <input type="submit" value="Scissors" name="move" class="btn btn-default">
            <input type="submit" value="Spock" name="move" class="btn btn-default">
            <input type="submit" value="Lizard" name="move" class="btn btn-default">
          </form>
        </div>
      </div>
    </div>
    <% end %>

    <% if @game.current_player == @game.player_2 && @game.mode == :two_player %>
    <div class="container-fluid">
      <div class="jumbotron">
        <div class="container">
          <h3><%= @game.current_player.name %>, choose your move</h3>
          <form action="/battle-analysis" method="post" style="display: inline-block;">
            <input type="submit" value="Rock" name="move" class="btn btn-default">
            <input type="submit" value="Paper" name="move" class="btn btn-default">
            <input type="submit" value="Scissors" name="move" class="btn btn-default">
            <input type="submit" value="Spock" name="move" class="btn btn-default">
            <input type="submit" value="Lizard" name="move" class="btn btn-default">
          </form>
        </div>
      </div>
    </div>
    <% end %>

    <% if @game.current_player == @game.player_2 && @game.mode == :one_player %>
    <div class="container-fluid">
      <div class="jumbotron">
        <div class="container">
          <h3><%= @game.current_player.name %> has chosen its move</h3>
            <form action="/battle-analysis" method="post">
              <input type="submit" value="Continue" name="move" class="btn btn-default">
            </form>
          </div>
        </div>
      </div>
    <% end %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </body>

</html>
