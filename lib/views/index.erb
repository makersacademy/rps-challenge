<div>
	<h1>Rock. Paper. Scissors.</h1>
		<p>Are you ready?!</p>
		<% if @message %>
	<p><%= @message %></p>
<% end %>
	<% if @name %>
	Welcome <%= @name %>
	<form method="get" action="/player">
	<button type="submit" id="ready">Ready!</button>
		<% else %>
		<form action="/" method="post">
		Please enter your name:
		<input type="text" name="name">
		<input type="submit" value="submit">
		</form>
	<% end %>
</div>