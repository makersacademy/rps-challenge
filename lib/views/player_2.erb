Player 1: <%= @player_one_name %>
Player 2: <%= @player_two_name %>

<h2> <%= @player_two_name %>, choose your weapon! </h2>
<h3>( <%= @player_one_name %>, please look away! )</h3>

<div>
<form action="/player_2" method="post">
  <input type="submit" name="p2_weapon" value="Rock">
  <input type="submit" name="p2_weapon" value="Paper">
  <input type="submit" name="p2_weapon" value="Scissors">
  <input type="submit" name="p2_weapon" value="Lizard">
  <input type="submit" name="p2_weapon" value="Spock">
</form>
</div>

<% if @player_two_weapon %>
<div><%= @player_two_name %> has chosen <%= @player_two_weapon %>!</div>
<div>
  <form action="/resolve" method="post">
    <input type="submit" value="Submit">
  </form>
</div>
<% end %>

